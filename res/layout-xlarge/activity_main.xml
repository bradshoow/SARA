<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    >

    <LinearLayout
		android:id="@+id/linearLayout1"
		android:orientation="vertical"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
    	>
		<CheckBox
			android:id="@+id/speedAutoCheckBox"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="25"
			android:text="@string/autospeed"
			/>
		<TextView
	        android:id="@+id/speedTresholdView"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="25"
	        android:gravity="center"
	        android:text= "@string/speedtreshold"
	        tools:context=".MainActivity" 
        	/>	
	    <SeekBar
	        android:id="@+id/seekBarSpeed"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="left"
	        android:layout_weight="100" 
	        android:max="30"
	        android:progress="5"
	    	/>
	</LinearLayout>
	
    	<LinearLayout
	    android:id="@+id/linearLayout2"
	    android:layout_below="@id/linearLayout1"
	    android:orientation="vertical"
	    android:layout_width="match_parent" 
	    android:layout_height="wrap_content"
	    >
   		<TextView
	        android:id= "@+id/speedtimetreshold"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="25"
	        android:gravity="center"
	        tools:context=".MainActivity" 
        	/>
	    <SeekBar
	        android:id="@+id/seekBarSpeedTime"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="100"
	        android:max="30"
	        android:progress="10"
	        />
   	</LinearLayout>
    
    
    
	<LinearLayout
	    android:id="@+id/linearLayout3"
	    android:layout_below="@id/linearLayout2"
	    android:orientation="vertical"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    >
		<CheckBox
			android:id="@+id/headingAutoCheckBox"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="25"
			android:text="@string/autohead"
			/>
		<TextView
	        android:id="@+id/headingTresholdView"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="25"
	        android:gravity="center"
	        android:text= "@string/headingtreshold"
	        tools:context=".MainActivity" 
        	/>	
	    <SeekBar
	        android:id="@+id/seekBarheading"        
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="100"
    	    android:max="30"
	        android:progress="5"
	        />    
	</LinearLayout>

	<LinearLayout
	    android:id="@+id/linearLayout4"
	    android:layout_below="@id/linearLayout3"
	    android:orientation="vertical"
	    android:layout_width="match_parent" 
	    android:layout_height="wrap_content"
	    >

   		<TextView
	        android:id= "@+id/headingtimetreshold"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="25"
	        android:gravity="center"
	        tools:context=".MainActivity" 
        	/>
	    <SeekBar
	        android:id="@+id/seekBarHeadingTime"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="100"
	        android:max="30"
	        android:progress="10"
	        />
   	</LinearLayout>
	

<LinearLayout 
    android:id="@+id/linearLayout5"
    android:layout_below="@id/linearLayout4"
    android:orientation="vertical"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    >   

        <TextView
        android:id="@+id/speedView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="25"
        android:gravity="center"
        android:textSize="100sp"
        tools:context=".MainActivity" 
        />

    <TextView
        android:id="@+id/heading"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="25"
        android:gravity="center"
        android:textSize="100sp"
        tools:context=".MainActivity" 
        />
    
    
    <ImageButton 
        android:id="@+id/buttonSpeak"
    	android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="25"
        android:contentDescription="@string/vocalrecognition"
        android:src="@+android:drawable/ic_btn_speak_now"
    	/>

</LinearLayout>

    
</RelativeLayout>