<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp" >

    <CheckBox
        android:id="@+id/AccuracyAutoCheckBox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="30dp"
        android:text="@string/autoaccuracy" />
    
   	<TextView
        android:id="@+id/AccuracyTimeTresholdView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/AccuracyAutoCheckBox"
        android:layout_toLeftOf="@+id/DecreaseAccuracyTimeTresholdButton"
        android:gravity="center"
        android:text="@string/accuracytimetreshold" />

    <Button
        android:id="@+id/DecreaseAccuracyTimeTresholdButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:textSize="50dp"
        android:layout_below="@+id/AccuracyAutoCheckBox"
        android:layout_toLeftOf="@+id/IncreaseAccuracyTimeTresholdButton"
        android:gravity="center"
        android:text="@string/DecreaseButton" />

    <Button
        android:id="@+id/IncreaseAccuracyTimeTresholdButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:textSize="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/AccuracyAutoCheckBox"
        android:gravity="center"
        android:text="@string/IncreaseButton" />
    

    <Button
        android:id="@+id/SaveSettingButton"
       android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:textSize="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="@string/savesetting" />
    

</RelativeLayout>