<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp" >

    <CheckBox
        android:id="@+id/DistanceAutoCheckBox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="@string/autodistance" />

    <TextView
        android:id="@+id/DistanceTimeTresholdView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/DistanceAutoCheckBox"
        android:layout_toLeftOf="@+id/DecreaseDistanceTimeTresholdButton"
        android:gravity="center"
        android:text="@string/distancetimetreshold" />

    <Button
        android:id="@+id/DecreaseDistanceTimeTresholdButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DistanceAutoCheckBox"
        android:layout_toLeftOf="@+id/IncreaseDistanceTimeTresholdButton"
        android:gravity="center"
        android:text="@string/DecreaseButton" />

    <Button
        android:id="@+id/IncreaseDistanceTimeTresholdButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/DistanceAutoCheckBox"
        android:gravity="center"
        android:text="@string/IncreaseButton" />

    <Button
        android:id="@+id/SaveSettingButton"
        android:layout_width="fill_parent"
        android:layout_height="96dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="@string/savesetting" />
    

</RelativeLayout>